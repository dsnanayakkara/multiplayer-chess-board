NODE_ENV=development
PORT=3001

# Frontend origin for CORS and cookie-based auth
APP_ORIGIN=http://localhost:5173

# Public app URL used when generating magic links
PUBLIC_APP_URL=http://localhost:5173

# PostgreSQL connection for auth/account persistence
DATABASE_URL=postgres://postgres:postgres@localhost:5432/multiplayer_chess

# Redis connection for session + rate limit state
REDIS_URL=redis://localhost:6379

# Required in production (32+ chars)
SESSION_SECRET=dev-session-secret-change-this-in-production-123456
